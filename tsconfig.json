{
  "compilerOptions": {
    "allowJs": true,
    "module": "esNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "target": "ES6",
    "lib": [
      "dom",
      "es5",
      "scripthost",
      "es2015.generator"
    ],
    "outDir": "dist"
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["**/node_modules", "**/.*/"],
}
